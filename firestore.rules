rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Använd foretag/{companyId} och svenska undermappar
    match /foretag/{companyId} {
      allow read, write: if isAuthorized(companyId);
      match /hierarki/{docId} {
        allow read, write: if isAuthorized(companyId);
      }
      match /profil/{docId} {
        allow read, write: if isAuthorized(companyId);
      }
    }

    match /users/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    function isAuthorized(companyId) {
      return request.auth != null && userCompanyId() == companyId;
    }

    function userCompanyId() {
      // Försök först med custom claims, fall tillbaka till users/{uid}.companyId
      return request.auth.token.companyId != null
        ? request.auth.token.companyId
        : get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId;
    }
  }
}
