{
  "name": "digitalkontroll",
  "main": "index.js",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start --port 8081",
    "firebase:deploy:storage": "npx firebase-tools deploy --only storage",
    "firebase:deploy:rules": "npx firebase-tools deploy --only firestore:rules",
    "admin:provision-company": "node ./scripts/provision-company.js",
    "admin:add-user": "node ./scripts/add-user.js",
    "admin:set-company-claim": "node ./scripts/set-company-claim.js",
    "admin:list-companies": "node ./scripts/list-foretag.js",
    "admin:import-companies-users": "node ./scripts/import-companies-users.js",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --android --port 8081",
    "ios": "expo start --ios --port 8081",
    "web": "expo start --web --port 19006",
    "web:clear": "expo start --web --port 19006 --clear",
    "build": "npx expo export --platform web --output-dir web-build && node ./scripts/verify-web-build.js",
    "build:web": "npx expo export --platform web --output-dir web-build",
    "verify:web": "node ./scripts/verify-web-build.js",
    "deploy:web": "npm run build && npx firebase-tools deploy --only hosting",
    "serve:web": "npx serve -s web-build -l 4173",
    "test:smoke:web": "npx playwright test",
    "test:smoke:web:headed": "PLAYWRIGHT_BROWSERS_PATH=./playwright-browsers npx playwright test --headed",
    "lint": "expo lint"
  },
  "dependencies": {
    "@expo-google-fonts/inter": "^0.4.2",
    "@expo/vector-icons": "^15.0.3",
    "@gorhom/bottom-sheet": "^5.2.8",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.21",
    "@react-navigation/stack": "^7.6.7",
    "expo": "~54.0.31",
    "expo-camera": "~17.0.10",
    "expo-constants": "~18.0.13",
    "expo-font": "~14.0.10",
    "expo-haptics": "~15.0.8",
    "expo-image": "~3.0.11",
    "expo-image-manipulator": "~14.0.8",
    "expo-image-picker": "~17.0.10",
    "expo-linking": "~8.0.11",
    "expo-print": "~15.0.8",
    "expo-sharing": "~14.0.8",
    "expo-splash-screen": "~31.0.13",
    "expo-status-bar": "~3.0.9",
    "expo-symbols": "~1.0.8",
    "expo-system-ui": "~6.0.9",
    "expo-web-browser": "~15.0.10",
    "firebase": "^12.6.0",
    "pdfjs-dist": "2.16.105",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "^0.81.5",
    "react-native-calendars": "^1.1313.0",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-get-random-values": "~1.11.0",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-signature-canvas": "^5.0.1",
    "react-native-signature-capture": "^0.4.12",
    "react-native-svg": "15.12.1",
    "react-native-web": "~0.21.0",
    "react-native-webview": "13.15.0",
    "react-native-worklets": "0.5.1",
    "react-pdf": "^10.3.0",
    "uuid": "^9.0.1",
    "xlsx-js-style": "^1.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/react": "~19.1.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~10.0.0",
    "expo-module-scripts": "^5.0.8",
    "firebase-admin": "^12.7.0",
    "serve": "^14.2.5",
    "typescript": "~5.9.2",
    "webpack": "^5.88.2",
